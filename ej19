#include <iostream>
using namespace std;

int main(){
	int id, peso, puerto, maxpeso=0, sum, maxid, a, b, c;
	
	cout<<"Ingresar datos del contenedor(id, peso y puerto): "<<endl;
	cin>>id>>peso>>puerto;
	
	for(int i=0, i<100, i++){
		sum=sum+peso;
		if(peso>maxpeso){
			maxpeso=peso;
			maxid=id;
		}
		if(puerto=='1'){
			a++;
		}else{
			if(puerto=='2'){
				b++;
			}else{
				c++;
			}
		}
		
	}
	cout<<"El buque debe trasladar "<<sum<<"kg"<< endl;
	cout<<"El contenedor "<<maxid<<" es el de mayor peso"<<endl;
	cout<<"Cantidad de contenedores por puerto: "<<endl;
	cout<<"Puerto 1: "<<a<<endl;
	cout<<"Puerto 2: "<<b<<endl;
	cout<<"Puerto 3: "<<c<<endl;
	
	return 0;
}
