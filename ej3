#include <iostream>
using namespace std;

int main() {
	int a, b, c;
	cout<<"Ingrese tres numeros para realizar las operaciones: ";
	cin>>a>>b>>c;
	cout<<endl;
	
	cout<<"La suma entre los tres es: "<<a+b+c<<endl;
	cout<<"El promedio entre los tres es: "<<(a+b+c)/3<<endl;
	cout<<"El producto de los tres es: "<<a*b*c<<endl;
	
	if(a>b&&a>c){
		cout<<"El mayor es: "<<a<<endl;
		cout<<"El menor es: "<<c<<endl;
	}else{
		if(a>b&&b<c){
			if(a>c){
				cout<<"El manor es: "<<a<<endl;
			}else{
				cout<<"El mayor es: "<<c<<endl;	
			}
			cout<<"El menor es: "<<b<<endl;
		}else{
			if(c>a&&a<b){
				if(c<b){
					cout<<"El mayor es: "<<b<<endl;
				}else{
					cout<<"El mayor es: "<<c<<endl;
				}
				cout<<"El menor es: "<<a<<endl;
			}else{
				cout<<"El mayor es: "<<b<<endl;
				cout<<"El menor es: "<<c<<endl;
			}
		}
	}
	
	return 0;
}
